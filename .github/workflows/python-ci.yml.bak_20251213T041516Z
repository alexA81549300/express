name: python-ci
on: [push, pull_request]
jobs:
  lint-test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with:
          python-version: '3.x'
      - run: python -m pip install -U pip ruff black
      - name: Ruff
        run: ruff check --output-format=github .
      - name: Black (check)
        run: black --check .
